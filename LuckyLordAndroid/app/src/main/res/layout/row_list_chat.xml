<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:weightSum="100"
    android:id="@+id/ll_mainbox_chat"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/space_helper_chat"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/emj_pocker" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="90"
        android:id="@+id/ll_box_chat"
        android:background="@drawable/bg_01"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
            android:id="@+id/text_box_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textDirection="rtl"
            android:textSize="@dimen/sss_font_size"
            android:text="hello"
            android:textStyle="bold" />

        <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
            android:id="@+id/date_box_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textDirection="rtl"
            android:text="date"
            android:textSize="@dimen/s4_font_size"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
