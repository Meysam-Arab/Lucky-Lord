<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_04"
    android:layoutDirection="ltr"
    android:layout_marginBottom="@dimen/font_size"
    android:layout_marginTop="@dimen/ss_font_size"
    android:id="@+id/option_dialog_bg"
    android:orientation="vertical">


    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/message_box_dialog"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"
        android:textDirection="rtl"
        android:gravity="center"
        android:textSize="@dimen/font_size" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:text="btn_dialog_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mess_01"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/gray"
            android:background="@drawable/bg_03"
            android:layout_marginBottom="2dp"
            android:maxLines="1"
            android:textSize="@dimen/sss_font_size"
            android:layout_weight="1" />
        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:text="btn_dialog_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_mess_02"
            android:visibility="gone"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/gray"
            android:maxLines="1"
            android:textSize="@dimen/sss_font_size"
            android:background="@drawable/bg_03"
            android:layout_marginBottom="2dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
