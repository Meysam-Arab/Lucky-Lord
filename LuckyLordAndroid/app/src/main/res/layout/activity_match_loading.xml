<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@drawable/t_bg_c"
    tools:context="ir.fardan7eghlim.luckylord.views.match.UniversalMatchLoadingActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:padding="@dimen/s5_font_size"
        app:srcCompat="@drawable/t_board_c" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:weightSum="100">

        <ImageView
            android:id="@+id/t_bg_d_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="30"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/t_bg_d_left" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="40" />

        <ImageView
            android:id="@+id/t_bg_d_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="30"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/t_bg_d_right" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="30">
            <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                android:id="@+id/stutus_matchLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textDirection="rtl"
                android:textSize="@dimen/sss_font_size"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="#543903"
                android:text="در حال جست و جوی حریف تصادفی" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="40">
            <FrameLayout
                android:id="@+id/result_op_avt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/font_size">
                <ImageView
                    android:id="@+id/result_hair_back_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/m_face_1" />

                <ImageView
                    android:id="@+id/result_face_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/m_face_1" />

                <ImageView
                    android:id="@+id/result_nose_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/m_nose_1" />

                <ImageView
                    android:id="@+id/result_lip_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/m_lip_1" />

                <ImageView
                    android:id="@+id/result_eye_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/m_eye_1" />

                <ImageView
                    android:id="@+id/result_eyebrow_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/m_eyebrow_1" />

                <ImageView
                    android:id="@+id/result_dress_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/m_dress_3" />

                <ImageView
                    android:id="@+id/result_neckless_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/m_neckless_2" />

                <ImageView
                    android:id="@+id/result_beard_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/m_beard_1" />

                <ImageView
                    android:id="@+id/result_earing_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/m_earing_1" />

                <ImageView
                    android:id="@+id/result_glasses_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/m_glasses_1" />

                <ImageView
                    android:id="@+id/result_hair_front_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/m_hair_1" />

                <ImageView
                    android:id="@+id/result_hat_op_avt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleX="-1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/m_face_1" />
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:paddingTop="50dp"
            android:layout_weight="30">
            <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                android:id="@+id/ltv_hint_matchLoading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textDirection="rtl"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:gravity="center"
                android:textSize="@dimen/s4_font_size"
                android:textStyle="bold"
                android:textColor="#3d2b05"
                android:text="..." />
        </LinearLayout>
    </LinearLayout>






</FrameLayout>
