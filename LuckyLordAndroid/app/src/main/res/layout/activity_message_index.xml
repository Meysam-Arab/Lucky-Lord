<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/t_bg_c"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="ir.fardan7eghlim.luckylord.views.message.MessageIndexActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1"
        android:layout_weight="10">
        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:id="@+id/chats_btn_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/b_spring_a"
            android:text="چت ها"
            android:textColor="@color/creamDarker"
            android:textSize="@dimen/s4_font_size" />
        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:id="@+id/messages_btn_li"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/b_spring_a"
            android:textColor="@color/creamDarker"
            android:text="پیام ها"
            android:textSize="@dimen/s4_font_size" />
    </LinearLayout>
    <ListView
        android:id="@+id/list_mi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">
    </ListView>
</LinearLayout>
