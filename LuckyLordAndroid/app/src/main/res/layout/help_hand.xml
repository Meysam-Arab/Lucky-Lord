<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ac324e1f"
    android:id="@+id/option_dialog_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_hand_help"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x2_font_size"
        android:layout_marginRight="@dimen/x2_font_size"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/b_spring_a" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:padding="@dimen/font_size"
                android:orientation="horizontal">
                <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                    android:id="@+id/message_help_hand"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="کلیک کنید!!!"
                    android:textColor="@color/creamDarker"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textDirection="rtl"
                    android:textSize="@dimen/s4_font_size" />

            </LinearLayout>
        </FrameLayout>
        <ImageView
            android:id="@+id/help_hand"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1_font_size"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/hand_a" />
    </LinearLayout>



</LinearLayout>
