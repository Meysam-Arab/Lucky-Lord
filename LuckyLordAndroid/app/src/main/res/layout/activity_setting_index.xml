<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/t_bg_c"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context="ir.fardan7eghlim.luckylord.views.settings.SettingIndexActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:background="@drawable/btn_empty_05"
                android:layout_marginTop="@dimen/s_font_size"
                android:layout_marginBottom="@dimen/ss_font_size"
                android:layout_marginLeft="@dimen/x1_font_size"
                android:layout_marginRight="@dimen/x1_font_size"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/s4_font_size" />
                <LinearLayout
                    android:id="@+id/fl_sound"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1_font_size"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_sound"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.4"
                        android:minWidth="150dp"
                        app:srcCompat="@drawable/icon_sound_unmute" />
                    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:textSize="@dimen/ss_font_size"
                        android:textColor="@color/black"
                        android:text="صدای بازی" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_notification_sound"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1_font_size"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_chat_notification"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.4"
                        android:minWidth="150dp"
                        app:srcCompat="@drawable/icon_like" />
                    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:textSize="@dimen/ss_font_size"
                        android:textColor="@color/black"
                        android:text="اطلاع رسانی چت" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_chat_allow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1_font_size"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_chat_allow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="0.4"
                        android:minWidth="150dp"
                        app:srcCompat="@drawable/icon_like" />
                    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.6"
                        android:gravity="center"
                        android:textSize="@dimen/ss_font_size"
                        android:textColor="@color/black"
                        android:text="چت فعال" />
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/s4_font_size" />
            </LinearLayout>
            <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                android:id="@+id/lb_register_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/b_spring_a"
                android:minWidth="150dp"
                android:text="ثبت نام"
                android:textSize="24sp" />

            <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                android:id="@+id/lb_user_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/b_spring_a"
                android:minWidth="150dp"
                android:text="پروفایل"
                android:textSize="24sp" />

            <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                android:id="@+id/lb_invite_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/b_spring_a"
                android:minWidth="150dp"
                android:text="دعوت دوستان(فندق رایگان)"
                android:textSize="24sp" />

            <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                android:id="@+id/lb_instagram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/b_spring_a"
                android:minWidth="150dp"
                android:text="اینستاگرام"
                android:textSize="24sp" />

            <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                android:id="@+id/lb_contact_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/b_spring_a"
                android:minWidth="150dp"
                android:text="نظرات و پیشنهادات"
                android:textSize="24sp" />

            <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                android:id="@+id/lb_rate_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/b_spring_a"
                android:minWidth="150dp"
                android:visibility="gone"
                android:text="امتیازدهی به بازی"
                android:textSize="24sp" />

            <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                android:id="@+id/lb_help_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/b_spring_a"
                android:minWidth="150dp"
                android:text="راهنما"
                android:textSize="24sp" />
            <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                android:id="@+id/lb_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/b_spring_a"
                android:minWidth="150dp"
                android:text="اشتراک گذاری"
                android:textSize="24sp" />

            <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                android:id="@+id/lb_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/b_spring_a"
                android:minWidth="150dp"
                android:text="درباره ما"
                android:textSize="24sp" />
            <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                android:id="@+id/lb_other_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/b_spring_a"
                android:minWidth="150dp"
                android:text="دیگر محصولات"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
