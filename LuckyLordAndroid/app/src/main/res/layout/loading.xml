<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/option_dialog_bg"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ac324e1f"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/hazzel_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:padding="@dimen/font_size"
            app:srcCompat="@drawable/c_hazzel_a" />
        <ImageView
            android:id="@+id/bg_d_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_gravity="left"
            app:srcCompat="@drawable/t_bg_d_left" />
        <ImageView
            android:id="@+id/bg_d_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:layout_gravity="right"
            app:srcCompat="@drawable/t_bg_d_right" />

        <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
            android:id="@+id/message_box_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#dfd4bc"
            android:gravity="center"
            android:text="فقط چند ثانیه..."
            android:textDirection="rtl"
            android:textStyle="bold"
            android:textSize="@dimen/font_size" />

        <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
            android:id="@+id/hint_box_dialog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/cream"
            android:gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/x1_font_size"
            android:text="..."
            android:textDirection="rtl"
            android:textStyle="bold"
            android:textSize="@dimen/sss_font_size" />
    </FrameLayout>

</LinearLayout>
