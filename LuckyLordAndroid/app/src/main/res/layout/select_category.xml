<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_04"
    android:orientation="vertical">
    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
        android:text="گروه نیمی از سوال ها رو انتخاب کن"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/ss_font_size"
        android:layout_marginTop="@dimen/s5_font_size"
        android:textColor="@color/creamDarker"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="9"
        android:paddingTop="@dimen/s4_font_size"
        android:paddingBottom="@dimen/s_font_size"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/select_cat_01"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_margin="3dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cat_music" />
        <ImageView
            android:id="@+id/select_cat_02"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_margin="3dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cat_music" />
        <ImageView
            android:id="@+id/select_cat_03"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_margin="3dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/cat_music" />

    </LinearLayout>

</LinearLayout>
