<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="100">
        <ImageView
            android:id="@+id/added_level_img_sunShine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/sun_effect_a" />
        <io.supercharge.shimmerlayout.ShimmerLayout
            android:id="@+id/shimmer_text_pdL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            app:shimmer_animation_duration="3200">
        <LinearLayout
            xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="100">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/t_level_up" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_weight="30"
                android:layout_height="0dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/btn_empty_01" />
                <at.grabner.circleprogress.CircleProgressView
                    android:id="@+id/levelDialog_circleView"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/s5_font_size"
                    CircleProgressView:cpv_autoTextSize="true"
                    CircleProgressView:cpv_barColor="@color/creamDarker"
                    CircleProgressView:cpv_barWidth="@dimen/sss_font_size"
                    CircleProgressView:cpv_innerContourSize="0dp"
                    CircleProgressView:cpv_maxValue="100"
                    CircleProgressView:cpv_outerContourSize="0dp"
                    CircleProgressView:cpv_rimColor="@color/creamDark"
                    CircleProgressView:cpv_rimWidth="@dimen/font_size"
                    CircleProgressView:cpv_seekMode="true"
                    CircleProgressView:cpv_showUnit="true"
                    CircleProgressView:cpv_spinColor="@color/cream"
                    CircleProgressView:cpv_textColor="@color/creamDarker"
                    CircleProgressView:cpv_textScale="1"
                    CircleProgressView:cpv_text=""
                    CircleProgressView:cpv_value="0" />
                <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                    android:id="@+id/added_level_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:textColor="#5e340a"
                    android:layout_gravity="center"
                    android:gravity="top"
                    android:text="99"
                    android:textDirection="ltr"
                    android:textStyle="bold"
                    android:textSize="@dimen/x1_font_size" />
            </FrameLayout>
        </LinearLayout>
        </io.supercharge.shimmerlayout.ShimmerLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</LinearLayout>
