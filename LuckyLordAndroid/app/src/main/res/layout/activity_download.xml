<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent" >
<ScrollView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/t_bg_a">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/t_bg_a"
        android:clickable="false"
        android:layout_marginBottom="@dimen/font_size"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"

        >
        <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/font_size"
            android:text="@string/msg_VersionExpired"/>
        <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
            android:id="@+id/ltv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/ss_font_size"
            android:text="@string/msg_VersionExpired_02"/>

        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:id="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignLeft="@+id/tv_version"
            android:layout_alignStart="@+id/tv_version"
            android:layout_below="@+id/tv_version"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/t_wood_b2"
            android:text="@string/btn_Download"
            />


        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:id="@+id/btn_Exit_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignLeft="@+id/btn_download"
            android:layout_alignStart="@+id/btn_download"
            android:layout_below="@+id/btn_download"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/t_wood_b2"
            android:text="@string/btn_Exit"
            />

    </LinearLayout>

</ScrollView>


</RelativeLayout>

