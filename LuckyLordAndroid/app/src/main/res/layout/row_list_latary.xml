<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_02"
    android:padding="@dimen/sss_font_size"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/row_bg_avatar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.45"
            android:layout_marginLeft="@dimen/s5_font_size"
            android:layout_marginRight="5dp">

            <!--<ImageView-->
                <!--android:id="@+id/avatar_in_row"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:adjustViewBounds="true"-->
                <!--android:gravity="center"-->
                <!--android:scaleType="fitCenter"-->
                <!--app:srcCompat="@drawable/logo_aboutus" />-->
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatar_in_row"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/logo_aboutus"
                app:civ_border_width="2dp"
                app:civ_border_color="#79875107"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/base_row_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.55"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:paddingRight="10dp">
            <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="زمان قرعه کشی:"
                android:textDirection="rtl"
                android:textColor="#19610a"
                android:textSize="@dimen/sss_font_size"
                android:textStyle="bold" />
            <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                android:id="@+id/text_first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textDirection="rtl"
                android:paddingRight="10dp"
                android:textColor="@color/creamDarker"
                android:textSize="@dimen/ss_font_size"
                android:textStyle="bold" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />
            <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="هزینه:"
                android:textDirection="rtl"
                android:textColor="#19610a"
                android:textSize="@dimen/sss_font_size"
                android:textStyle="bold" />
            <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                android:id="@+id/text_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textDirection="rtl"
                android:paddingRight="10dp"
                android:textSize="@dimen/sss_font_size"
                android:textColor="@color/creamDarker"
                android:textStyle="bold" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:orientation="vertical">

        <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
            android:id="@+id/luckyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="جایزه:"
            android:textColor="#19610a"
            android:textDirection="rtl"
            android:textSize="@dimen/sss_font_size"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:layout_gravity="right"
            android:weightSum="1"
            android:orientation="horizontal">
            <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                android:id="@+id/text_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:gravity="right"
                android:inputType="textMultiLine"
                android:text=""
                android:textDirection="rtl"
                android:textColor="@color/creamDarker"
                android:textSize="@dimen/sss_font_size"
                android:textStyle="bold" />
            <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                android:id="@+id/text_second2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="left"
                android:inputType="textMultiLine"
                android:text=""
                android:textDirection="rtl"
                android:textColor="@color/creamDarker"
                android:textSize="@dimen/sss_font_size"
                android:textStyle="bold" />
        </LinearLayout>

        <!--<ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView-->
            <!--android:id="@+id/text_second"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center_vertical"-->
            <!--android:inputType="textMultiLine"-->
            <!--android:text=""-->
            <!--android:textDirection="rtl"-->
            <!--android:textSize="@dimen/sss_font_size"-->
            <!--android:textStyle="bold" />-->

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:id="@+id/row_first_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/s5_font_size"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/bg_03"
            android:textColor="@color/creamDarker"
            android:text="درباره ی اسپانسر"
            android:textSize="@dimen/s4_font_size" />

        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:id="@+id/row_second_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/s5_font_size"
            android:layout_weight="0.5"
            android:background="@drawable/bg_03"
            android:text="..."
            android:textColor="@color/creamDarker"
            android:textSize="@dimen/s4_font_size" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
</LinearLayout>
