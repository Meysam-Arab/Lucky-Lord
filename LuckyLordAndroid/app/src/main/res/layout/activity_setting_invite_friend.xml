<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:background="@drawable/t_bg_a"
    tools:context="ir.fardan7eghlim.luckylord.views.settings.SettingInviteFriendActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/c_cloud_c_sif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingBottom="@dimen/s5_font_size"
            app:srcCompat="@drawable/c_cloud_c" />
        <ImageView
            android:id="@+id/LuckyLord_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginLeft="@dimen/sss_font_size"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/t_title" />

        <ImageView
            android:id="@+id/c_cloud_d_sif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingTop="@dimen/s4_font_size"
            android:paddingRight="@dimen/font_size"
            android:layout_marginTop="100dp"
            android:paddingLeft="@dimen/font_size"
            android:layout_gravity="top"
            app:srcCompat="@drawable/c_cloud_b" />
        <ImageView
            android:id="@+id/c_cloud_b_sif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingTop="@dimen/s4_font_size"
            android:paddingRight="@dimen/font_size"
            android:paddingLeft="@dimen/font_size"
            android:layout_gravity="center"
            app:srcCompat="@drawable/c_cloud_b" />
        <ImageView
            android:id="@+id/c_cloud_a_sif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="@dimen/ss_font_size"
            android:paddingBottom="@dimen/s5_font_size"
            app:srcCompat="@drawable/c_cloud_a" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:gravity="bottom"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/F_rabbitBoard_sif"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/t_land_a" />
                <ImageView
                    android:id="@+id/rabbitBoard_sif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/c_rabbit_ca" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="100dp"
                    android:layout_marginLeft="100dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                        android:id="@+id/text01_sif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textDirection="rtl"
                        android:gravity="center"
                        android:textSize="@dimen/s4_font_size"/>
                    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                        android:id="@+id/inviteCode_sif"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/s5_font_size"
                        android:background="@drawable/bg_01"
                        android:gravity="center"
                        android:text=""
                        android:textDirection="rtl"
                        android:textSize="@dimen/s4_font_size"
                        android:textStyle="bold" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/t_title_b_sif"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="30dp"
                    android:scaleType="fitCenter"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/t_title_b" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/land_inviteFriend"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:background="@color/greenLand"
                android:orientation="vertical"/>
        </LinearLayout>
        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:id="@+id/btn_invite_sif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_long_e2"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/font_size"
            android:layout_marginRight="@dimen/font_size"
            android:layout_marginLeft="@dimen/font_size"
            android:text="اشتراک گذاری" />

    </FrameLayout>
</LinearLayout>
