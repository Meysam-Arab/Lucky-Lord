<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/t_bg_c"
    android:layoutDirection="ltr"
    tools:context="ir.fardan7eghlim.luckylord.views.hazels.HazelCategoriesActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/context_index_hc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="100">

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15" />

            <LinearLayout
                android:id="@+id/ll_index_buttons"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="25"
                android:orientation="vertical"
                android:weightSum="4">

                <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                    android:id="@+id/btn_chance_context"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/x1_font_size"
                    android:layout_marginRight="@dimen/x1_font_size"
                    android:layout_weight="1"
                    android:background="@drawable/btn_long_e2"
                    android:text="رقابت با حریف تصادفی"
                    android:textStyle="bold" />

                <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                    android:id="@+id/btn_with_firend_context"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/x1_font_size"
                    android:layout_marginRight="@dimen/x1_font_size"
                    android:layout_weight="1"
                    android:background="@drawable/btn_long_e2"
                    android:text="رقابت با دوستان"
                    android:textStyle="bold" />

                <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                    android:id="@+id/btn_search_opponent_context"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/x1_font_size"
                    android:layout_marginRight="@dimen/x1_font_size"
                    android:layout_weight="1"
                    android:background="@drawable/btn_long_e2"
                    android:text="جستجوی حریف"
                    android:textStyle="bold" />

                <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
                    android:id="@+id/btn_team_context"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/x1_font_size"
                    android:layout_marginRight="@dimen/x1_font_size"
                    android:layout_weight="1"
                    android:background="@drawable/btn_long_e2"
                    android:text="لیگ"
                    android:textColor="@color/creamDark"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_index_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/s5_font_size"
                android:paddingLeft="@dimen/s4_font_size"
                android:paddingRight="@dimen/s4_font_size"
                android:layout_weight="50"
                android:background="@drawable/btn_empty_04"
                android:orientation="vertical">

                <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/cream"
                    android:textSize="@dimen/sss_font_size"
                    android:gravity="center_horizontal"
                    android:text="لیست بازی های اخیر شما"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/pb_recent_games"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ListView
                    android:id="@+id/list_recent_games"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:paddingBottom="@dimen/ss_font_size"
                    android:visibility="gone" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/t_bg_b_down" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/t_bg_b_up_2" />
    </FrameLayout>
</LinearLayout>
