<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/t_bg_c"
    android:layoutDirection="ltr"
    android:weightSum="100"
    tools:context="ir.fardan7eghlim.luckylord.views.user.MakeAvatarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:weightSum="100"
        android:layout_margin="@dimen/s5_font_size"
        android:background="@drawable/bg_01"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/store_make_avatar_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_gravity="left"
            android:layout_weight="20"
            app:srcCompat="@drawable/b_store" />
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10" />
        <TextView
            android:id="@+id/hazzel_make_avatar_show"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:gravity="center_vertical|right"
            android:textColor="@color/cream"
            android:textSize="@dimen/sss_font_size"
            android:textStyle="bold"
            android:text="0" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_weight="20"
            app:srcCompat="@drawable/c_coin_a" />
    </LinearLayout>
    <FrameLayout
            android:id="@+id/result_avt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="56"
            android:background="@drawable/t_board_c"
            android:paddingTop="@dimen/x1_font_size"
            android:paddingBottom="@dimen/x1_font_size"
            android:paddingLeft="@dimen/font_size"
            android:paddingRight="@dimen/font_size"
            android:layout_marginRight="@dimen/font_size"
            android:layout_marginLeft="@dimen/font_size">
            <ImageView
                android:id="@+id/result_hair_back_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:srcCompat="@drawable/m_face_1" />
            <ImageView
                android:id="@+id/result_face_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/m_face_1" />
            <ImageView
                android:id="@+id/result_nose_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/m_nose_1" />
            <ImageView
                android:id="@+id/result_lip_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/m_lip_1" />
            <ImageView
                android:id="@+id/result_eye_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/m_eye_1" />
            <ImageView
                android:id="@+id/result_eyebrow_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/m_eyebrow_1" />
            <ImageView
                android:id="@+id/result_dress_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/m_dress_3" />
            <ImageView
                android:id="@+id/result_neckless_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/m_neckless_2" />
            <ImageView
                android:id="@+id/result_beard_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/m_beard_1" />
            <ImageView
                android:id="@+id/result_earing_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/m_earing_1" />
            <ImageView
                android:id="@+id/result_glasses_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/m_glasses_1" />
            <ImageView
                android:id="@+id/result_hair_front_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/m_hair_1" />
            <ImageView
                android:id="@+id/result_hat_avt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:srcCompat="@drawable/m_face_1" />
        <FrameLayout
            android:id="@+id/price_banner_ma"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="7">
                </LinearLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="25">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/s_off_shop_a" />
                    <TextView
                        android:id="@+id/price_text_ma"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="@dimen/sss_font_size"
                        android:textStyle="bold"
                        android:text="500" />
                </FrameLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="68">
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>


    </FrameLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_margin="@dimen/ss_font_size"
            android:background="@drawable/bg_03"
            android:layout_weight="20"
            android:weightSum="100"
            android:orientation="vertical" >
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:weightSum="100"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/prev_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    android:scaleX="-1"
                    app:srcCompat="@drawable/b_next_btn" />

                <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                    android:id="@+id/current_item_text_avt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/s5_font_size"
                    android:layout_weight="40"
                    android:text="..."
                    android:textSize="@dimen/font_size"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/next_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="30"
                    app:srcCompat="@drawable/b_next_btn" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30"
                android:orientation="horizontal"
                android:weightSum="10">

                <FrameLayout
                    android:id="@+id/prev_item_avt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <ImageView
                        android:id="@+id/prev_item_avt_p1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="@dimen/x1_font_size"
                        app:srcCompat="@drawable/bg_05" />

                    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                        android:id="@+id/prev_item_text_avt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="@dimen/s5_font_size"
                        android:textColor="@color/creamDark"
                        android:textSize="@dimen/sss_font_size"
                        android:text="..." />

                    <ImageView
                        android:id="@+id/prev_item_avt_p2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="@dimen/font_size"
                        android:scaleX="-1"
                        android:layout_marginLeft="@dimen/s5_font_size"
                        android:layout_gravity="center_vertical|left"
                        app:srcCompat="@drawable/b_next_all_btn" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/next_item_avt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                    <ImageView
                        android:id="@+id/next_item_avt_p1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="@dimen/x1_font_size"
                        app:srcCompat="@drawable/bg_05" />

                    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                        android:id="@+id/next_item_text_avt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginLeft="@dimen/s5_font_size"
                        android:textColor="@color/creamDark"
                        android:textSize="@dimen/sss_font_size"
                        android:text="..." />

                    <ImageView
                        android:id="@+id/next_item_avt_p2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="@dimen/font_size"
                        android:layout_marginRight="@dimen/s5_font_size"
                        android:layout_gravity="center_vertical|right"
                        app:srcCompat="@drawable/b_next_all_btn" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5">

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal">

        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:id="@+id/setAvatar_avt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_long_e2"
            android:layout_marginLeft="@dimen/font_size"
            android:layout_marginRight="@dimen/font_size"
            android:layout_weight="1"
            android:textSize="@dimen/ss_font_size"
            android:textStyle="bold"
            android:text="خوبه" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:weightSum="3"
        android:orientation="horizontal">

        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:id="@+id/reset_avt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_long_e2"
            android:layout_marginLeft="@dimen/font_size"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textSize="@dimen/s4_font_size"
            android:textStyle="bold"
            android:text="دوباره" />
        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:id="@+id/save_avt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_long_e2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:textSize="@dimen/s4_font_size"
            android:textStyle="bold"
            android:text="ذخیره عکس" />
        <ir.fardan7eghlim.luckylord.models.widgets.LuckyButton
            android:id="@+id/cancel_avt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_long_e2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/font_size"
            android:layout_weight="1"
            android:textSize="@dimen/s4_font_size"
            android:textStyle="bold"
            android:text="بیخیال" />
    </LinearLayout>

</LinearLayout>
