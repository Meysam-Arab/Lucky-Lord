<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_bet_row"
    android:layout_width="200dp"
    android:layout_height="230dp"
    android:background="@drawable/t_board_c"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:padding="@dimen/font_size">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_is_nitro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/c_rocket_b_alpha" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"
                android:orientation="horizontal"
                android:weightSum="1">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_bet_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/c_coin_a" />

                    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                        android:id="@+id/ltv_bet_cost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:textDirection="rtl"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:inputType="textPersonName"
                        android:text="500"
                        android:textSize="@dimen/font_size"></ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="40"
                android:layout_marginTop="@dimen/s5_font_size"
                android:layout_marginBottom="@dimen/s5_font_size"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:padding="2dp"
                android:weightSum="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_06"
                    android:weightSum="1"
                    android:padding="1dp"
                    android:orientation="horizontal">

                    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                        android:id="@+id/ltv_bet_reward"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="950 فندق"
                        android:textDirection="rtl"
                        android:textStyle="bold"
                        android:textColor="@color/creamDark"
                        android:gravity="center"
                        android:textSize="@dimen/s5_font_size"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/c_present"
                        android:padding="2dp"
                        android:scaleType="fitCenter"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_06"
                    android:weightSum="1"
                    android:padding="2dp"
                    android:orientation="horizontal">

                    <ir.fardan7eghlim.luckylord.models.widgets.LuckyTextView
                        android:id="@+id/ltv_bet_time"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="950 فندق"
                        android:textDirection="rtl"
                        android:textStyle="bold"
                        android:textColor="@color/creamDark"
                        android:gravity="center"
                        android:textSize="@dimen/s5_font_size"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_weight="0.3"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/c_cornometer"
                        android:padding="2dp"
                        android:scaleType="fitCenter"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>