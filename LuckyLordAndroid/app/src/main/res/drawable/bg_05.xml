<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <solid android:color="#efad39"/>
            <stroke
                android:width="3.7dp"
                android:color="#773a1b02" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="@dimen/s5_font_size"
                android:top="2dp"
                android:right="@dimen/s5_font_size"
                android:bottom="2dp"
            />
        </shape>
    </item>
</selector>