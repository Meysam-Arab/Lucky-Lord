<?xml version="1.0" encoding="utf-8"?>
<!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_focused="true">
        <shape>
            <solid android:color="#d1919191"/>
            <stroke
                android:width="3.3dp"
                android:color="#770b1208" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true" android:state_focused="false">
        <shape>
            <solid android:color="#d1919191"/>
            <stroke
                android:width="3.3dp"
                android:color="#770b1208" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="true">
        <shape>
            <solid android:color="#d1919191"/>
            <stroke
                android:width="4.3dp"
                android:color="#770b1208" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_pressed="false" android:state_focused="false">
        <shape>
            <solid android:color="#d1919191"/>
            <stroke
                android:width="4.7dp"
                android:color="#770b1208" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <padding
                android:left="@dimen/sss_font_size"
                android:top="4dp"
                android:right="@dimen/sss_font_size"
                android:bottom="4dp"
            />
        </shape>
    </item>
</selector>